// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  username  String
  id        Int              @id @default(autoincrement())
  exercises Exercise_model[]
  progress  Workout[]
  growth    Growth[]
}

model Exercise_model {
  id     Int    @id @default(autoincrement())
  name   String
  sets   Int
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}

//----------------------------------------

model Workout {
  id        Int        @id @default(autoincrement())
  date      DateTime // New field to track workout dates
  exercises Exercise[] @relation("WorkoutToExercise")
  User      User?      @relation(fields: [userId], references: [id])
  userId    Int?
}

model Exercise {
  id        Int      @id @default(autoincrement())
  sets      Set[]
  workout   Workout? @relation("WorkoutToExercise", fields: [workoutId], references: [id])
  workoutId Int?
}

model Set {
  id         Int       @id @default(autoincrement())
  reps       Float
  weight     Float
  que        String
  exercise   Exercise? @relation(fields: [exerciseId], references: [id])
  exerciseId Int?
}

//------------------------------------

model Growth {
  id           Int      @id @default(autoincrement())
  date         DateTime
  weightChange Float
  user         User     @relation(fields: [userId], references: [id])
  userId       Int
}
